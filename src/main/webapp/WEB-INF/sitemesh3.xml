<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>

	<!--默认情况下， sitemesh 只对 HTTP 响应头中 Content-Type 为 text/html 的类型进行拦截和装饰， 我们可以添加更多的 mime 类型 -->
	<mime-type>text/html</mime-type>
<!-- 	<mime-type>application/vnd.wap.xhtml+xml</mime-type> -->
<!-- 	<mime-type>application/xhtml+xml</mime-type> -->

	<!-- 默认装饰器，当下面的路径都不匹配时，启用该装饰器进行装饰 -->
<!-- 	<mapping decorator="/decorate.jsp" /> -->
	
	<!-- 指明满足“/*”的页面，将被“/decorate.jsp”所装饰 -->
	<mapping path="/**/forward/manage" decorator="/decorate.jsp" />


	<!-- 排除，不进行装饰的路径 -->
	<mapping path="/rule.html" exclue="true" />

</sitemesh>